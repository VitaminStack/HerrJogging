<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Class="HerrJogging.Pages.KartePage"
             xmlns:local="clr-namespace:HerrJogging"
             BackgroundColor="#181825"
             Shell.NavBarIsVisible="False">

    <Grid>
        <mapsui:MapControl x:Name="MyMap"
        VerticalOptions="FillAndExpand"
        HorizontalOptions="FillAndExpand"/>
        <!-- 2. Menüleiste oben -->
        <HorizontalStackLayout
        Padding="0,12,0,8"
        HorizontalOptions="Center"
        VerticalOptions="Start"
        Margin="0,18,0,0"
        Spacing="10">          
            
        </HorizontalStackLayout>

        <!-- 3. Floating Button oben rechts -->
        <Button x:Name="MapToggleBtn"
            Text="🌎"
            BackgroundColor="#80b4befe"
            TextColor="#181825"
            FontAttributes="Bold"
            WidthRequest="45"
            CornerRadius="50"
            BorderColor="#181825"
            BorderWidth="1"
            Scale="1.5"
            Clicked="OnMapToggleClicked"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,350,40,0" />

        <!-- 4. Untere Buttonleiste -->
        <HorizontalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="End"
        Spacing="20"
        Padding="0,0,0,36">
            <Button x:Name="TrackBtn"
            Text="▶ Start Tracking"
            Clicked="OnTrackClicked"
            WidthRequest="150"
            BackgroundColor="#94e2d5"
            TextColor="#181825"
            FontAttributes="Bold"
            CornerRadius="22"
            IsVisible="True"/>
            <Button x:Name="PauseBtn"
            Text="⏸ Pause"
            Clicked="OnPauseClicked"
            WidthRequest="110"
            BackgroundColor="#fab387"
            TextColor="#181825"
            FontAttributes="Bold"
            CornerRadius="22"
            IsVisible="False"/>
            <Button x:Name="ResumeBtn"
            Text="▶ Fortsetzen"
            Clicked="OnResumeClicked"
            WidthRequest="120"
            BackgroundColor="#94e2d5"
            TextColor="#181825"
            FontAttributes="Bold"
            CornerRadius="22"
            IsVisible="False"/>
            <Button x:Name="StopTrackBtn"
            Text="■ Stop"
            Clicked="OnStopTrackClicked"
            WidthRequest="80"
            BackgroundColor="#f38ba8AA"
            TextColor="#181825"
            FontAttributes="Bold"
            CornerRadius="22"
            IsVisible="False"/>
        </HorizontalStackLayout>
        <local:BottomNavBar VerticalOptions="Start" />
    </Grid>
</ContentPage>
